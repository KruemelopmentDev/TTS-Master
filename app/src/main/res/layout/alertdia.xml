<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="?attr/colorBackgroundFloating"
    android:padding="10dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="TTS speichern"
        android:textColor="?android:attr/textColorPrimary"
        android:textAlignment="center"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Gib hier bitte den Dateinamen deiner Datei ein! Wenn du nichts eingibst, wird das aktuelle Datum und die aktuelle Zeit verwendet."
        android:textAlignment="center"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="20sp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Bitte gib den Dateinamen ein"
        android:textColor="?android:attr/textColorPrimary"
        android:inputType="text" />

    <TextView
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editText2"
        android:text="Speichern"
        android:background="@drawable/buttongreen"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignParentStart="true"
        android:text="Abbrechen"
        android:background="@drawable/buttonred"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="25sp" />

</RelativeLayout>